        android:hint="Nom tasca"/>
    <EditText
        android:id="@+id/task_Priority"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:hint="Prioritat de de tasca"/>
